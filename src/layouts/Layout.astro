---
import NavLink from '../components/NavLink.astro'
import Logo from '../components/Logo.astro'
import '../styles/reset.css'
import '../styles/markdown-styling.css'

export interface Props {
	title: string;
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preload" href="https://fonts.googleapis.com">
		<link rel="preload" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,600;0,700;1,400" rel="stylesheet">
		<link rel="stylesheet" href="/node_modules/modern-normalize/modern-normalize.css" />
	</head>
	<body>
		<header class="header">
			<a href="/"><Logo class="icon" /><span class="sr-only">Michaela Isaacs: Software Developer Home</span></a>
			<ul class="text-header flex flex-grow" style="flex-wrap: nowrap">
				<NavLink linkPath="/" label="Home" />
				<NavLink linkPath="/about" label="About" />
				<NavLink linkPath="/blog" label="Blog" />
			</ul>
		</header>
		<main class="container">
			<div>
				<slot />
			</div>
		</main>
	</body>
</html>

<style is:global>
	:root {
		--color-emphasis: #E11D48;
		--color-emphasis-light: #F43F5E;
		--color-base: #27272A;
		--bg: #FAFAFA;
		--breakpoint-xs: 640px;
		--random-breakpoint: 850px;
		--breakpoint-md: 768px;
		--breakpoint-lg: 1024px;
		--breakpoint-xl: 1280px;
		--breakpoint-2xl: 1536px;
	}
	body {
		font-family: 'Montserrat', sans-serif;
		background-color: var(--bg);
		color: var(--color-base);
		font-size: 1.125rem;
		line-height: 1.75rem;
	}
	.header {
		display: flex;
		padding: 2rem 2rem;
		align-items: center;
		gap: 2rem;
	}
	.header > ul {
		justify-content: end;
	}
	@media (max-width: 640px) {
		.header {
			display: grid;
			grid-template-columns: 1fr;
		}
		.header > ul {
			justify-content: center;
		}
	}
	.container {
		padding: 2rem 2rem 4rem;
		width: screen;
		height: 100%;
		position: relative;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	.container > div {
		width: 100%;
		max-width: var(--breakpoint-lg);
	}
	@media (min-width: 1024px) {
		.header {
			padding: 2rem 3.5rem;
		}
		.container {
			padding: 2rem 7rem 4rem;
		}
	}
	.icon {
		margin: auto;
	}
	.flex {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
	}
	.flex-grow {
		flex-grow: 1;
	}
	.justify-apart {
		justify-content: space-between;
	}
	.justify-end {
		justify-content: flex-end;
	}
	.align-middle {
		align-items: center;
	}
	.align-bottom {
		align-items: flex-end;
	}
	.align-top {
		align-items: flex-start;
	}
	.text-header {
		font-size: 1.5rem;
		line-height: 2rem;
		font-weight: 600;
	}
	.text-subtitle {
		font-size: 1.875rem;
		line-height: 2.25rem;
	}
	.text-title {
		font-size: 3rem;
		font-weight: bold;
		line-height: 3.5rem;
		margin-bottom: .875rem;
	}
	.text-color-emphasis {
		color: var(--color-emphasis);
	}
	.text-color-emphasis-light {
		color: var(--color-emphasis-light);
	}
	.bold {
		font-weight: bold;
	}
	.underline {
		border-bottom: 2px solid var(--color-emphasis-light);
	}
	.underline-dull {
		border-bottom: 2px solid #A1A1AA;
	}
	.spacer-padding {
		padding: 2.5rem 0px 2.5rem 0px;
	}
	.card {
		padding: 1.5rem 1.25rem;
		box-shadow: inset 0px 2px 2px 0px rgb(0,0,0,.25);
		background-color: #F4F4F5;
		border-radius: 8px;
	}
	.card-square {
		width: 15rem;
		height: 12rem;
		flex-grow: 0;
		flex-shrink: 0;
	}
	.rounded {
		border-radius: 8px;
	}
	.spacer-margin {
		margin-bottom: .875rem;
	}
	.spacer-margin-large {
		margin-bottom: 2rem;
	}
	.spacer-margin-xl {
		margin-bottom: 3rem;
	}
	.banner {
		background-color: #A1A1AA;
		width: 100%;
		height: 9rem;
		object-fit: cover;
	}
	.spacer-padding-small {
		padding: .875rem 0px .875rem 0px;
	}
	.spacer-padding-xs {
		padding: .5rem 0px .5rem 0px;
	}
	.padding-large {
		padding: 2rem;
	}
	.bulleted {
		list-style-type: disc;
		list-style-position: inside;
	}
	.spacer-margin-small {
		margin-bottom: .5rem;
	}
	.inline-block {
		display: inline-block;
	}
	.inline {
		display: inline;
	}
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
</style>