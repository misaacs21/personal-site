---
import NavLink from '../components/NavLink.astro'
export interface Props {
	title: string;
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/node_modules/modern-normalize/modern-normalize.css" />
	</head>
	<body>
		<header style="display:flex;">
			<div style="flex-grow:1;">
				<div style="width:4rem;height:4rem;background-color:gray;"/>
			</div>
			<ul style="display:flex;column-gap:1.5rem;">
				<NavLink linkPath="/" label="Home" />
				<NavLink linkPath="/about" label="About" />
				<NavLink linkPath="/blog" label="Blog" />
			</ul>
		</header>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--font-size-base: 1.125rem;
		--line-height-base: 1.75rem;
	}

	/* Strip certain styles */
	h1, h2, h3, h4, h5 {
		font-size: inherit;
		line-height: inherit;
		font-weight: normal;
	}

	ul {
		list-style-type: none;
	}

	a {
		text-decoration-line: none;
	}
</style>
