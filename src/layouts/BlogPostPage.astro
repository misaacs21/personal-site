---
import Layout from './Layout.astro'
import CaretLeft from '../components/CaretLeft.astro'

const {frontmatter} = Astro.props
---

<Layout title={ frontmatter.title }>
    <div class="current-container">
        <a class="bump-down" href="/blog" aria-label="Back to blog">
            <CaretLeft />
        </a>
        <article>
            <div class="bottom-padding underline">
                <h1 class="text-title">{ frontmatter.title }</h1>
                <div class="text-subtitle spacer-margin">{ frontmatter.tagline }</div>
                <div class="weight-light">
                    <span class="date-stuff">{ frontmatter.date }</span>
                    { frontmatter.tags.join(', ') }
                </div>
            </div>
            <div class="padding-top">
                <div class="image" style="flex-shrink: 0;">
                    <img src={`/assets/${frontmatter.image}`} alt={ frontmatter.altText } />
                </div>            
                <div class="markdown-styling">
                    <slot />
                </div>       
            </div>
        </article>
    </div>
</Layout>

<style>
.current-container {
    display: flex;
    column-gap: 1rem;
}
.current-container > article {
    flex-grow: 1;
}
.weight-light {
    font-weight: lighter;
}
.bottom-padding {
    padding-bottom: 1.75rem;
}
.padding-top {
    padding-top: 1.75rem;
}
.bump-down {
    margin-top: .5rem;
}
.date-stuff::after {
    content: '|';
    margin-left: 1rem;
    margin-right: .75rem;
}
.image {
    position: relative;
    width: 16rem;
    height: 16rem;
    box-shadow: inset 0px 2px 2px 0px rgb(0,0,0,.25);
    border-radius: 8px;
    padding: 1rem;
    background-color: #F4F4F5;
    float: left;
    margin-right: 1.25rem;
    margin-bottom: 1rem;
}
.image > img {
    border-radius: 8px;
    width: 100%;
    height: 100%;
    object-fit: cover;
}
</style>