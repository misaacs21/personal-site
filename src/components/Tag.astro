---
import CircleCheckFilled from './CircleCheckFilled.astro';
import CircleCheck from './CircleCheck.astro';
export interface Props {
	selected: Boolean;
}

const { selected = null } = Astro.props;
---

<li>
    <button class="card">
        { selected === true && <CircleCheckFilled /> }
        { selected === false && <CircleCheck /> }
        <slot />
    </button>
</li>

<style>
    button {
        padding: .25rem .5rem !important;
		box-shadow: 0px 2px 2px 0px rgb(0,0,0,.25) !important;
        width: fit-content;
        display: flex;
        gap: .5rem;
        align-items: center;
        min-width: 3rem;
        justify-content: center;
    }
    li {
        list-style-type: none;
    }
    
</style>